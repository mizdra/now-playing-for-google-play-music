{
  "name": "#NowPlaying for Google Play Music",
  "version": "1.0.1",
  "description": "Share music playing on Google Play Music to SNS.",
  "short_name": "#NowPlaying",
  "author": "mizdra",
  "homepage_url": "https://github.com/mizdra/now-playing-for-google-play-music",
  "permissions": ["storage"],
  "applications": {
    "gecko": {
      "id": "now-playing-for-google-play-music@mizdra.net",
      "strict_min_version": "53.0"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://play.google.com/*"],
      "run_at": "document_start",
      "css": ["src/content/index.css"],
      "js": ["src/lib.js", "src/content/index.js"]
    }
  ],
  "options_ui": {
    "page": "src/option/index.html",
    "open_in_tab": false
  },
  "icons": {
    "48": "src/img/logo-48.png",
    "96": "src/img/logo-96.png",
    "128": "src/img/logo-128.png"
  },
  "manifest_version": 2
}
