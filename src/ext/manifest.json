{
  "name": "#NowPlaying for Google Play Music",
  "version": "1.1.1",
  "description": "It's tools to share music playing on Google Play Music / Youtube Music to SNS.",
  "short_name": "#NowPlaying",
  "author": "mizdra",
  "homepage_url": "https://now-playing-for-gpm.mizdra.net",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://play.google.com/music/listen*"],
      "run_at": "document_idle",
      "js": ["./pages/gpm/content.js"]
    },
    {
      "matches": ["https://music.youtube.com/*"],
      "run_at": "document_idle",
      "js": ["./pages/ytm/content.js"]
    }
  ],
  "options_ui": {
    "page": "./pages/options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "img/logo-48.png",
    "96": "img/logo-96.png",
    "128": "img/logo-128.png"
  },
  "manifest_version": 2
}
